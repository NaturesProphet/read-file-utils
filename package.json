{
  "name": "read-file-utils",
  "version": "1.1.1",
  "description": "Utilities for reading and manipulating text files using javascript",
  "main": "src/index.js",
  "scripts": {
    "release": "standard-version",
    "commit": "git-cz"
  },
  "bin": {
    "index": "src/index.js"
  },
  "devDependencies": {
    "commitizen": "^3.0.5",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.3.1",
    "standard-version": "^4.4.0",
    "validate-commit-msg": "^2.14.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NaturesProphet/read-file-utils.git"
  },
  "keywords": [
    "text",
    "files",
    "read",
    "read-file"
  ],
  "author": "Mateus Garcia",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/NaturesProphet/read-file-utils/issues"
  },
  "homepage": "https://github.com/NaturesProphet/read-file-utils#readme",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": "conventional-commit-types",
      "helpMessage": "Use \"npm run commit\" instead, we use conventional-changelog format :) (https://github.com/commitizen/cz-cli)"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "validate-commit-msg"
    }
  }
}
